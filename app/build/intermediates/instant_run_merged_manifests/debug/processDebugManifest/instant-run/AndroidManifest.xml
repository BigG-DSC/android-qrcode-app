<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eitdigital.big.brighteyedapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="eitdigital.big.brighteyedapp.access.Welcome_Activity"
            android:theme="@style/AppTheme.NoActionBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="eitdigital.big.brighteyedapp.access.Access_Activity"
            android:label="@string/title_activity_dashboard_doctors"
            android:theme="@style/AppTheme.NoActionBar.Fullscreen" />
        <activity
            android:name="eitdigital.big.brighteyedapp.doctors.DashboardDoctors_Activity"
            android:label="@string/title_activity_dashboard_doctors"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="eitdigital.big.brighteyedapp.doctors.Generator_Activity"
            android:label="QRCode Generator"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="eitdigital.big.brighteyedapp.doctors.Logout_Activity"
            android:label="Logout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="eitdigital.big.brighteyedapp.patients.DashboardPatients_Activity"
            android:label="@string/title_activity_dashboard_doctors"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="eitdigital.big.brighteyedapp.patients.Reader_Activity"
            android:label="QRCode Reader"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="eitdigital.big.brighteyedapp.patients.Logout_Activity"
            android:label="Logout"
            android:theme="@style/AppTheme.NoActionBar" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="eitdigital.big.brighteyedapp.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>