<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="eitdigital.big.brighteyedapp">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".access.Welcome_Activity"
            android:theme="@style/AppTheme.NoActionBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".access.Access_Activity"
            android:label="@string/title_activity_dashboard_doctors"
            android:theme="@style/AppTheme.NoActionBar.Fullscreen"/>
        <activity
            android:name=".doctors.DashboardDoctors_Activity"
            android:label="@string/title_activity_dashboard_doctors"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".doctors.Generator_Activity"
            android:label="QRCode Generator"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".doctors.Logout_Activity"
            android:label="Logout"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".patients.DashboardPatients_Activity"
            android:label="@string/title_activity_dashboard_doctors"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".patients.Reader_Activity"
            android:label="QRCode Reader"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".patients.Logout_Activity"
            android:label="Logout"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>